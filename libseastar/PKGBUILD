pkgname="libseastar"
pkgver="0.1.0"
pkgrel="1"
pkgdesc="Statically linked C library exporting common programming idioms"
arch=("any")
license=("MIT")
source=("https://github.com/AmateurECE/$pkgname/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('7df6e30657123545d69a32c5ccba442fbb67a1c7ec8650ae843a530c13fbc86a')
makedepends=("meson")
url="https://github.com/AmateurECE/$pkgname"
groups=("edtwardy")

prepare() {
    tar xzf v$pkgver.tar.gz
}

build() {
    (cd $pkgname-$pkgver && meson setup --prefix /usr ../build)
    (cd build && ninja)
}

package() {
    (cd build && meson install --destdir=$pkgdir)
}
