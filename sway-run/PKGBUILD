pkgname=sway-run
pkgver=1.0.0
pkgrel=1
pkgdesc='wrapper script to run sway'
arch=(any)
url='https://sr.ht/~kennylevinsen/greetd/'
license=('MIT')
depends=('sway-git')
source=('sway-run.sh')
sha256sums=('9c285613df5a9efbca76097507cddbf4032f6735b42203e2a56c879da116bfcc')

package() {
    install -Dm755 sway-run.sh "$pkgdir/usr/bin/sway-run"
}
