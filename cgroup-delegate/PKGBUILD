# Maintainer: Ethan D. Twardy <ethan.twardy@gmail.com>

pkgname=cgroup-delegate
pkgver=1.0.0
pkgrel=1
pkgdesc='systemd drop-in file to delegate CGroup controllers to a non-root user'
arch=(any)
url='https://wiki.archlinux.org/title/Cgroups#User_delegation'
license=('MIT')
depends=('systemd')
source=('delegate.conf')
sha256sums=('e76d8e19201dfabb0968655f9597434d63b7551cd81375963a0a1c7d7e3de43b')

package() {
    # Obviously, this install script only works for my system, or systems where the
    # delegated user also has UID 1000. It's an ugly solution.
    install -Dm644 delegate.conf -t "$pkgdir/etc/systemd/system/user@1000.service.d"
}
