pkgname="libfsautomata"
pkgver="0.1.0"
pkgrel="1"
pkgdesc="Simple statically linked state machine framework in C"
arch=("any")
license=("MIT")
source=("https://github.com/AmateurECE/fsautomata/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('c0a92fde126183999671f9649d65496a84d723ebeef92a17d48f2e4df5116090')
makedepends=("meson")
url="https://github.com/AmateurECE/fsautomata"
groups=("edtwardy")

prepare() {
    tar xzf v$pkgver.tar.gz
}

build() {
    (cd fsautomata-$pkgver && meson setup --prefix /usr ../build)
    (cd build && ninja)
}

package() {
    (cd build && meson install --destdir=$pkgdir)
}
