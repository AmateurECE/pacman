# Maintainer: Ethan D. Twardy <ethan.twardy@gmail.com>

pkgname=greetd-config-vm
pkgver=1.0.0
pkgrel=1
pkgdesc='greetd configuration for work virtual machines'
arch=(any)
url='https://github.com/AmateurECE/pacman.git'
license=('MIT')
source=(
    'greetd.conf'
    'greetd.toml'
)
sha256sums=('8b93c52b244d9cd2318fe5a52464e3c5d47013cce588045b3d8effa988cb1ef2'
            'fb20e826a653361579bdffd63298bf7781043516490a0986524182506d240904')
depends=(startwm)

_datadir=/usr/share
_systemd_unitdir=/usr/lib/systemd/system

package() {
    install -Dm644 greetd.conf \
            "${pkgdir}${_systemd_unitdir}/greetd.service.d/greetd.conf"
    install -Dm644 greetd.toml "${pkgdir}${_datadir}/greetd/greetd.toml"
}
