pkgname=startwm-env-m1
pkgver=1.0.0
pkgrel=1
pkgdesc='setup environment for startwm, to run Wayland on Apple M1 hardware'
arch=(any)
url='https://github.com/AmateurECE/pacman.git'
license=('MIT')
source=('startwm.sh')
sha256sums=('ac70ba552205ab75282df12e0cbf7c3baac05da717c0531e604c8a795ba45eb0')

package() {
    install -Dm644 startwm.sh "${pkgdir}/etc/profile.d/startwm.sh"
}
